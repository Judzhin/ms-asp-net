@{
    ViewBag.Title = "ButtonAction";
    var X = Html.X();
}

<!DOCTYPE html>

<html>
<head>
    <title>Title</title>    
</head>
<body>
    @(X.ResourceManager())
    
    @(X.Viewport()
        .Layout(LayoutType.Border)
        .Items(
            X.Panel()
                .ID("North")
                .Region(Region.North)
                .Title("North")
                .Frame(true)
                .Height(200)
                .Collapsible(true),
                
            X.Panel()
                .ID("West")
                .Region(Region.West)
                .Title("West")
                .Frame(true)
                .Width(200)
                .Collapsible(true),
                
            X.Panel()
                .Region(Region.Center)
                .BodyPadding(5)
                .Content(c => @"<ul>
                        <li>If keys are not working then click on center area</li>
                        <li>NORTH toggle: N</li>
                        <li>WEST toggle: W</li>
                        <li>EAST toggle: E</li>
                        <li>SOUTH toggle: S</li>
                    </ul>"),
                
            X.Panel()
                .ID("East")
                .Region(Region.East)
                .Title("East")
                .Frame(true)
                .Width(200)
                .Collapsible(true),
                
            X.Panel()
                .ID("South")
                .Region(Region.South)
                .Title("South")
                .Frame(true)
                .Height(200)
                .Collapsible(true)
        )
    )
</body>
</html>